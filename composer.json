{
    "name": "potherca/composer-base-plugin",
    "description": "Composer Base Plugin",
    "keywords": ["composer", "composer-plugin"],
    "license": "GPL-3.0+",
    "type": "composer-plugin",
    "authors": [
        {
            "name": "Potherca",
            "homepage": "http://pother.ca",
            "email": "potherca@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.3",
        "composer-plugin-api": "~1.0",
        "potherca/php-base": "~0"
    },
    "require-dev": {
        "composer/composer": "~1.0",
        "phpunit/phpunit": "~4.3"
    },
    "autoload": {
        "psr-4": {
            "Potherca\\Composer\\": "src/",
            "Potherca\\Example\\Composer\\Plugins\\": "example/"
        }
    },
    "autoload-dev": {
        "psr-4": {"Potherca\\Composer\\": "tests/"}
    },
    "extra": {
        "class": "Potherca\\Composer\\Plugins\\BasePlugin",
        "foo": ["Bar", "Baz"]
    }
}
